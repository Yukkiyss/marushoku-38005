<div class="card">
  <%= link_to image_tag(store.image, class: :card__img ), store_path(store.id)%>   
  <div class="card__body">
    <%= link_to store.store_name, store_path(store.id), class: :card__title%>
    <p>
    <%= link_to store.user.nickname, user_path(store.user.id), class: :card__user %>
    </p>
  </div>
</div>